<% include ../partials/header %>

<div class="container">
    <h1>Booking System <br /><small>Welcome <%= user.firstName %> <%= user.lastName %></small></h1>
</div>
<div class="container">
    <h3>Create a new booking request.</h3>
    <form class="form-horizontal" action="/user/<%= user._id %>/bookings" method="POST">
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="toDate">From date:</label>
            <div class="col-md-3">
                <input id="fromDate" class="form-control" type="date" name="fromDate" placeholder="dd/mm/yyyy">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="toDate">To date:</label>
            <div class="col-md-3">
                <input id="toDate" class="form-control" type="date" name="toDate" placeholder="dd/mm/yyyy">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="days">Total Days:</label>
            <div class="col-md-3">
                <input id="days" class="form-control" type="text" name="days">                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1 col-md-offset-5">
                <button class="btn btn-default">Submit Request</button>
            </div>            
        </div>

    </form>
</div>

<% include ../partials/footer %>
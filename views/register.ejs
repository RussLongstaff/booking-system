<% include partials/header %>
<div class="container">
    <h1>Booking System <br /><small>Welcome</small></h1>
</div>
<div class="container">
    <h3>Create an account to start making bookings</h3>
    
    <% if (message.length > 0) { /* show any messages that come back with authentication */%>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>   
    
    <form class="form-horizontal" action="/register" method="POST">
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="firstName">Firstname</label>
            <div class="col-md-3">
                <input class="form-control" id="firstName" type="text" name="firstName" placeholder="Firstname">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="lastName">Lastname</label>
            <div class="col-md-3">
                <input class="form-control" id="lastName" type="text" name="lastName" placeholder="Lastname">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="email">Email</label>
            <div class="col-md-3">
                <input class="form-control" id="email" name="email" type="text" placeholder="Email">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="password">Password</label>
            <div class="col-md-3">
                <input class="form-control" id="password" name="password" type="password" placeholder="Password">                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-md-offset-3 control-label" for="department">Department</label>
            <div class="col-md-3">
                <select class="form-control" id="department" name="department">
                    <option>Choose</option>
                    <option>Sales</option>
                    <option>HR</option>
                    <option>Marketing</option>
                    <option>Accounts</option>
                </select>                
            </div>
        </div>     
        <div class="form-group">
            <div class="col-md-offset-5 col-md-2">
                <button class="btn btn-default">Create New Account</button>    
            </div>
        </div>
    </form>
    <h3>Already have an account? <a href="/login">Click here</a> to sign in!</h3>
</div>

<% include partials/footer %>